#include <stdio.h>

int main() {
    int a;
    scanf("%d", &a);
    int sum=1;
    if(                  

    for(int i=1;i<=a;i++){
        int start=sum;
        for(int j=1;j<=i;j++){
            printf("%d ", sum);
            sum++;
        }
        for(int k=sum-2;k>=start;k--){
            printf("%d ", k);
        }
        printf("\n");
    }

    return 0;
}

