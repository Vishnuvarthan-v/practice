#include <stdio.h>

int main() {
    int a;
   scanf("%d", &a);
   
   if(a<=0 || a>40){
       printf("Invalid Input.");
       return 0;
   }
   
   while(a>=40){
       printf("XL");
       a-=40;
   }
   while(a>=10){
       printf("X");
       a-=10;
   }
   while(a>=9){
       printf("IX");
       a-=9;
   }
   while(a>=5){
       printf("V");
       a-=5;
   }
   while(a>=4){
       printf("IV");
       a-=4;
   }
   while(a>=1){
       printf("I");
       a-=1;
   }
    return 0;
}

INPUT 1:
37 (Input)
SAMPLE OUTPUT 1:
XXXVII

SAMPLE INPUT 2:
56
SAMPLE OUTPUT 2:
Invalid input
