#include <stdio.h>

int main() {
   int a,temp,digit=0;
   int mid1,mid2;
   scanf("%d", &a);
   temp=a;
   while(temp>0){
       digit++;
       temp/=10;
   }
   temp=a;
   for(int i=0;i<digit/2;i++){
       mid1=temp%10;
       temp/=10;
   }
   
   if(digit%2==1){
       printf("%d", mid1);
   }
   else{
       mid2=temp%10;
       printf("%d ", mid1 + mid2);
   }
    return 0;
}

Sample Input : 1
14562 (Value)
Sample Output : 1
15 (Sum of middle digits)

Sample Input : 2
10254823 (Value)
Sample Output : 2
21 (Sum of middle digits)
